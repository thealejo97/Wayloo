<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.anadirpeluqueroapeluqueria.anadirpeluqueroapeluqueria"
    android:background="@color/backGroudMain"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:text="Escriba el telefono para buscar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTelefonoAnadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteText"
            android:layout_weight="1"
            android:textColor="@color/whiteText"
            android:hint="Telefono"></EditText>
        <Button
            android:id="@+id/butonBuscarBarbero"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/whiteText"
            android:text="Buscar"
            android:background="@drawable/search"
            ></Button>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecycleBarberosAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white">
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>