<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.anadirpeluqueroapeluqueria.anadirpeluqueroapeluqueria"
    android:background="@color/backGroudMain"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afiliar usuario"
        android:textSize="18dp"
        android:textColor="@color/whiteText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:drawableTint="@color/GRAY"
            android:id="@+id/etTelefonoAnadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/GRAY"
            android:ems="10"
            android:inputType="number"
            android:layout_weight="1"
            android:textColor="@color/whiteText"
            android:hint="TelÃ©fono"></EditText>
        <Button
            android:id="@+id/butonBuscarBarbero"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/whiteText"
            android:text="Buscar"
            android:background="@drawable/search"
            ></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whiteText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />
    <TextView
        android:id="@+id/sinResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin resultados"
        android:textSize="13dp"
        android:textColor="@color/whiteText"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecycleBarberosAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white">
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>