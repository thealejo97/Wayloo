-->

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:src="@drawable/cartelcorona1">
            </ImageView>

            <TextView
                android:id="@+id/NameReplaceBarber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/Nombre"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold|italic"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:src="@drawable/cartelcorona2">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/Teléfono"
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"></TextView>

            <TextView
                android:id="@+id/TelReplaceBarber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Teléfono"
                android:textColor="@android:color/white"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/Dirección"
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"></TextView>

            <TextView
                android:id="@+id/DirReplaceBarber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Dirección"
                android:textColor="@android:color/white"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ciudad:      "
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/CiuReplaceBarber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciu"
                android:textColor="@android:color/white"
                android:visibility="gone"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cantidad de estrellas:      "
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/CalReplaceBarber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bar"
                android:textColor="@android:color/white"
                android:visibility="gone"></TextView>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        />

</LinearLayout>